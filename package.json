{
  "name": "io-ts-promise",
  "version": "1.1.0",
  "description": "io-ts for developers who like Promises",
  "keywords": [
    "io-ts",
    "promise"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "npm run lint && npm run test:js",
    "lint": "npm run lint:prettier && npm run lint:tslint && npm run lint:typescript",
    "lint:prettier": "prettier --list-different 'src/*.ts' 'test/*.ts'",
    "lint:tslint": "tslint-config-prettier-check ./tslint.json && tslint 'src/*.ts' 'test/*.ts'",
    "lint:typescript": "tsc --noEmit",
    "test:js": "mocha -r ts-node/register test/*.ts",
    "build": "tsc",
    "installPeerDepenencies": "npm install --no-save io-ts@1.x",
    "prepublish": "npm run installPeerDepenencies && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aeirola/io-ts-promise.git"
  },
  "author": "Axel Havukangas <axel@havukangas.fi>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aeirola/io-ts-promise/issues"
  },
  "homepage": "https://github.com/aeirola/io-ts-promise",
  "dependencies": {
    "deep-equal": "^1.0.1"
  },
  "peerDependencies": {
    "io-ts": "1.x"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/deep-equal": "^1.0.1",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "fp-ts": "^1.14.2",
    "mocha": "^6.0.1",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  }
}
